{
    "expo": {
        "name": "kt_mobile_app",
        "slug": "kt_mobile_app",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "ios": {
            "supportsTablet": true,
            "infoPlist": {
                "NSFaceIDUsageDescription": "Your custom description for using Face ID."
              }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "permissions": [
                "USE_FINGERPRINT",
                "USE_BIOMETRIC"
              ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        }
    }
}
